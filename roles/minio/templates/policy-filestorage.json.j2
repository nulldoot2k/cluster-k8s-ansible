{
  "Version": "2012-10-17",
  "Description": "Policy for file-storage bucket - created on 2025-10-15",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::{{ minio.minio_bucket_name }}",
        "arn:aws:s3:::{{ minio.minio_bucket_name }}/*"
      ]
    }
  ]
}
